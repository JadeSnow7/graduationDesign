# EMField Teaching Platform - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Required
# =============================================================================

# Database connection string
DB_DSN=emfield:EmField2024Pass!@tcp(mysql:3306)/emfield?charset=utf8mb4&parseTime=True&loc=Local

# JWT Secret (change this in production!)
JWT_SECRET=your-secure-jwt-secret-change-me

# =============================================================================
# LLM Configuration (Required for AI features)
# =============================================================================

# OpenAI-compatible API endpoint
LLM_BASE_URL=http://host.docker.internal:11434
LLM_API_KEY=ollama
LLM_MODEL=qwen3:4b

# Enable/disable AI service
AI_ENABLED=true

# =============================================================================
# Simulation Service
# =============================================================================

SIM_ENABLED=true
SIM_BASE_URL=http://127.0.0.1:8002

# =============================================================================
# Optional: MinIO Object Storage
# =============================================================================

MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=emfield-uploads

# =============================================================================
# Optional: MySQL (if using built-in MySQL)
# =============================================================================

MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_PASSWORD=EmField2024Pass!

# =============================================================================
# Optional: CORS
# =============================================================================

CORS_ORIGINS=http://localhost:5173,http://localhost:3000
